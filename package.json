{
  "name": "writr",
  "version": "1.6.1",
  "description": "A Simple to Use Markdown Blog",
  "main": "./dist/index",
  "types": "./dist/index",
  "repository": "https://github.com/jaredwray/writr.git",
  "author": "Jared Wray <me@jaredwray.com>",
  "license": "MIT",
  "keywords": [
    "static-site-generator",
    "static-site",
    "ssg",
    "documentation",
    "website",
    "blog",
    "templates",
    "generator",
    "framework",
    "writr",
    "writer",
    "html",
    "markdown",
    "handlebars"
  ],
  "scripts": {
    "watch": "tsc -w -p .",
    "clean-all": "yarn clean && rm -rf node_modules && rm -rf coverage",
    "clean": "rm -rf ./dist && yarn clean-output",
    "clean-output": "rm -rf ./blog_output",
    "compile": "yarn clean && tsc -p .",
    "build": "yarn test && yarn compile",
    "test": "jest --coverage && yarn clean-output",
    "test-output": "yarn compile && node ./bin/writr -p ./blog_example"
  },
  "bin": {
    "writr": "./bin/writr"
  },
  "dependencies": {
    "array-sort": "^1.0.0",
    "cheerio": "^1.0.0-rc.10",
    "commander": "^8.3.0",
    "del": "^6.0.0",
    "ecto": "^1.1.0",
    "feed": "^4.2.2",
    "fs-extra": "^10.0.0",
    "gray-matter": "^4.0.3",
    "helper-date": "^1.0.1",
    "keyv": "^4.0.4",
    "luxon": "^2.1.1",
    "parse-json": "^6.0.1",
    "striptags": "^3.2.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/array-sort": "^1.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "@types/keyv": "^3.1.3",
    "@types/luxon": "^2.0.7",
    "@types/node": "^16.11.7",
    "@types/parse-json": "^4.0.0",
    "@types/winston": "^2.3.8",
    "codecov": "^3.8.3",
    "jest": "^27.3.1",
    "source-map-support": "^0.5.20",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "files": [
    "dist",
    "bin"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.(ts)"
    ],
    "testEnvironment": "node"
  }
}
