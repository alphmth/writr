{
  "name": "writr",
  "version": "1.5.6",
  "description": "A Simple to Use Markdown Blog",
  "main": "./dist/index",
  "types": "./dist/index",
  "repository": "https://github.com/jaredwray/writr.git",
  "author": "Jared Wray <me@jaredwray.com>",
  "license": "MIT",
  "keywords": [
    "static-site-generator",
    "static-site",
    "ssg",
    "documentation",
    "website",
    "blog",
    "templates",
    "generator",
    "framework",
    "writr",
    "writer",
    "html",
    "markdown",
    "handlebars"
  ],
  "scripts": {
    "watch": "tsc -w -p .",
    "clean-all": "yarn clean && rm -rf node_modules && rm -rf coverage",
    "clean": "rm -rf ./dist && yarn clean-output",
    "clean-output": "rm -rf ./blog_output",
    "compile": "yarn clean && tsc -p .",
    "build": "yarn test && yarn compile",
    "test": "jest --coverage && yarn clean-output",
    "test-output": "yarn compile && node ./bin/writr -p ./blog_example"
  },
  "bin": {
    "writr": "./bin/writr"
  },
  "dependencies": {
    "array-sort": "^1.0.0",
    "cheerio": "^1.0.0-rc.10",
    "commander": "^7.2.0",
    "del": "^6.0.0",
    "ecto": "^1.0.5",
    "feed": "^4.2.2",
    "fs-extra": "^10.0.0",
    "gray-matter": "^4.0.3",
    "helper-date": "^1.0.1",
    "keyv": "^4.0.3",
    "luxon": "^1.27.0",
    "markdown-it": "^12.0.6",
    "parse-json": "^5.2.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/array-sort": "^1.0.0",
    "@types/express": "^4.17.12",
    "@types/express-serve-static-core": "^4.17.21",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^26.0.23",
    "@types/keyv": "^3.1.1",
    "@types/luxon": "^1.27.0",
    "@types/markdown-it": "^12.0.2",
    "@types/node": "^15.12.4",
    "@types/parse-json": "^4.0.0",
    "@types/winston": "^2.3.8",
    "codecov": "^3.8.2",
    "jest": "^27.0.5",
    "source-map-support": "^0.5.19",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  },
  "files": [
    "dist",
    "bin"
  ]
}
